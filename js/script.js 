function mapInit(){
  var PathData  = [
    [37.828357, 122.004282],
    [37.837563, 121.967060],
    [37.819139, 121.944978],
  ];
  var mapobj = document.getElementById('googleMap');
  var danville = new google.maps.LatLng(37.837563, 121.96706);
  var mapOptions = {
    zoom:10,
    center:danville,
    mapTypeId: google.maps.MapTypeId.ROADMAP

  };
  var myMap =new google.maps.Map(mapobj,mapOptions);

  var marker = new google.maps.Marker({
    title:"danville",
    position:danville,
    map:myMap,
    draggable:true,
    animation: null,

  });
  var alertBody = "danville" ;
  var infowindow = new google.maps.InfoWindow({
    content:alertBody,
  });
  marker.addListener("click",() => {
    marker.getAnimation() !==null?marker.setAnimation(null):marker.setAnimation(google.maps.Animation.BOUNCE);
    infowindow.open({
      map:myMap,
      anchor:marker
    });
  });





  var path = [];
  var bounds = new google.maps.LatLngBounds();
  var center={lat:37.837563, lng:121.96706};
  console.log(center);
  bounds.extend(center);
  for (var i in PathData)
  {
      var p = PathData[i];
      var latlng = new google.maps.LatLng(p[0], p[1]);
      console.log(latlng);
      path.push(latlng);
      bounds.extend(latlng);
  }
  var poly = new google.maps.Polygon({
      paths: path,
      strokeColor: '#FF0000',
      strokeOpacity: 0.8,
      strokeWeight: 3,
      fillColor: '#FF0000',
      fillOpacity: 0.1
  });
  poly.setMap(myMap);


  myMap.fitBounds(bounds);

}



google.maps.event.addDomListener(window, 'load', mapInit);
