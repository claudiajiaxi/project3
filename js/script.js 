function initMap() {
    var map;
    var highschoolLatLang = new google.maps.LatLng(37.828357, -122.004382);
    var DiabloLatLang = new google.maps.LatLng(37.837563, -121.967060);
    var ParkLatLang = new google.maps.LatLng(37.819139, -121.944978)
    const contentString =
        '<h1>highschool</h1>' +
        'This is where I go to most days' +
        'This is the san ramon highschool. ';
    const DiabloString =
        '<h1>mountdiablo</h1>' +
        'This is where I sometimes go. ' +
        'Sometimes I have hiking in this mountain';
    const infowindow = new google.maps.InfoWindow({
        content: highschoolLatLang,
    });
    const scienceInfo = new google.maps.InfoWindow({
        content: ParkLatLang,
    });
    var image =
        "https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png";

    map = new google.maps.Map(document.getElementById("map"), {
        center: highschoolLatLang,
        zoom: 18,
    });
    var iconBase = 'https://maps.google.com/mapfiles/kml/shapes/';
    var marker = new google.maps.Marker({
        position: ParkLatLang,
        map: map,
        icon: iconBase + 'ParkLatLang.png',
        animation: google.maps.Animation.BOUNCE,
        title: "This is a beautiful Park",
    });

    new google.maps.Marker({
        position: highschoolLatLang,
        map: map,
        title: "Drag Me!",
        icon: image,
        draggable: true,
    });

    const marker_two = new google.maps.Marker({
        position: DiabloLatLang,
        map,
        title: "mountdiablo",
    });

    const scienceMarker = new google.maps.Marker({
        position: ParkLatLang,
        map,
        title: "Sycanore valley Park",
    });

    marker_two.addListener("click", () => {
        infowindow.open({
            anchor: marker_two,
            map,
            shouldFocus: false,
        });
    });
}

window.addEventListener('load', initMap)
